import tkinter
from tkinter import ttk, messagebox
from PIL import ImageTk
from PIL import Image

class persona():
    def _init_(self):
        self._nombre = " "
        self._cedula = 0
        self._edad = 0
    def get_Nombre(self):
        return self._nombre
    def get_Cedula(self):
        return self._cedula
    def get_Edad(self):
        return self._edad
    def set_Nombre(self, n):
        self._nombre = n
    def set_Cedula(self, p):
        self._precio = p
    def set_Edad(self, e):
        self._edad = e

    def crear(self, nombre, edad, cedula):
        self.nombre = nombre
        self.edad = edad
        self.cedula = cedula

class ventanaVotacion:

    def __inti__(self):

        ventana = tkinter.Tk()
        ventana.geometry("500x400")
        ventana.title("Votacion")
        ventana.configure(bg="white")

        etiNombre = tkinter.Label(ventana, text="Nombre: ")
        etiNombre.config(bg="white")
        etiNombre.pack(side=tkinter.TOP)

        def votoCandidato1():
            candidato1 =+ 1
            print(candidato1)
        def votoCandidato2():
            candidato2 =+ 1
            print(candidato2)

        botonOpcion1 = tkinter.Button(ventana, text="INGRESAR", command = votoCandidato1)
        botonOpcion1.pack()

        botonOpcion2 = tkinter.Button(ventana, text="INGRESAR", command = votoCandidato2)
        botonOpcion2.pack()


class ventana:
    def __init__(self):

        v = ventanaVotacion

        ventana = tkinter.Tk()
        ventana.geometry("500x400")
        ventana.title("Votacion")
        ventana.configure(bg="white")

        imagen = Image.open("LOGO-REGISTRADURIA.png")
        fondo = ImageTk.PhotoImage(imagen)
        etiImagen = tkinter.Label(ventana, image=fondo)
        etiImagen.pack()

        etiNombre = tkinter.Label(ventana, text="Nombre: ")
        etiNombre.config(bg="white")
        etiNombre.pack(side=tkinter.TOP)
        inNombre = tkinter.Entry(ventana)
        inNombre.pack(side=tkinter.TOP)

        etiEdad = tkinter.Label(ventana, text="Edad: ")
        etiEdad.config(bg="White")
        etiEdad.pack()
        inEdad = tkinter.Entry(ventana)
        inEdad.pack()


        def verificarValidez():
            a = int(str(inEdad.get()))
            if a<18 or a>70:
                messagebox.showinfo(message="NO PUEDE VOTAR", title="ADVERTENCIA")

            else:
                respuesta = messagebox.askquestion("Confirmacion", "Inscribió su cedula previamente?")
                if respuesta == "yes":
                     i=messagebox.askquestion(message="Quiere votar por el candidato 1")
                     if i == "yes":
                         votoCandidato1=+1
                         messagebox.showinfo(message=("EL candidato 1 tiene ", str(votoCandidato1)))
                     else:
                         j = messagebox.askquestion(message="Quiere votar por el candidato 2")
                         if j == "yes":
                            votoCandidato2=+1
                            messagebox.showinfo(message=("EL candidato 2 tiene ", str(votoCandidato2)))
                         else:
                            messagebox.showinfo(message=("Su voto fue en blanco y fué invalidado"))


        botonIngresar = tkinter.Button(ventana, text="INGRESAR", command=verificarValidez)
        botonIngresar.pack()

        ventana.mainloop()

class controlador():
    def _init_():
        v = ventana
        v.__init__(None)

c = controlador
c._init_()
